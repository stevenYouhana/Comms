<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane fx:controller="UI.FXMLDocumentController"  
    xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="20" vgap="20"
    styleClass="UI.Style.css" >
    
        <Label id="lblPort" fx:id="lblPort" text="Com port:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <ComboBox fx:id="cboComs" promptText="choose.." GridPane.rowIndex="0" />
        <Button text="ON" onAction="#onAction" fx:id="on" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <Button text="OFF" onAction="#offAction" fx:id="off" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <Label fx:id="lblBaud" text="baud rate:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextField fx:id="txtBaud" promptText="9600"  GridPane.columnIndex="1" GridPane.rowIndex="2" /> 
        <Label fx:id="lblCommand" text="commmand:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <TextField fx:id="txtCommand" GridPane.columnIndex="1" GridPane.rowIndex="3" />
        <Button fx:id="btnPush" text="Push" onAction="#push" GridPane.columnIndex="1" GridPane.rowIndex="4" prefWidth="150"  />
        <TextArea fx:id="txtOutput" GridPane.columnIndex="1" GridPane.rowIndex="5"  
                  wrapText="true" editable="false" promptText="output..."/>


        
</GridPane>